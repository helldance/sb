http://www.springframework.org/schema/jms http://www.springframework.org/schema/jms/spring-jms-3.0.xsd">

<bean class="org.apache.activemq.command.ActiveMQTopic" id="destination">
	<constructor-arg value="TEST.T1"></constructor-arg>
</bean>
<bean class="org.apache.activemq.ActiveMQConnectionFactory" id="topicConnectionFactory">
	<property name="brokerURL"><value>tcp://localhost:61616</value></property>
</bean>
<bean class="com.coordsafe.notification.subscribe.SMSTopicSubscribe" id="topicSMSMessageListener"/>
<bean class="com.coordsafe.notification.subscribe.EMAILTopicSubscribe" id="topicEMAILMessageListener"/>
<bean class="com.coordsafe.notification.subscribe.PushTopicSubscribe" id="topicPushMessageListener"/>

